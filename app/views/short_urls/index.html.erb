<div class="container d-flex align-items-center justify-content-center vh-100">
  <div class="card">
    <div class="card-body">
      <h1 class="display-4">URL Shortener</h1>

      <h2>Shorten a URL</h2>
      <%= form_with(model: ShortUrl.new, url: short_urls_path, local: true, class: "mb-4") do |form| %>
        <div class="form-group">
          <%= form.text_field :original_url, class: 'form-control', placeholder: 'Enter a URL', required: true %>
        </div>
        <div class="form-group">
          <%= form.submit 'Shorten URL', class: 'btn btn-primary' %>
        </div>
      <% end %>

      <h2>Previously shortened URLs</h2>
      <% ShortUrl.all.each do |short_url| %>
        <div class="card mb-3">
          <div class="card-body d-flex justify-content-between align-items-center">
            <p class="card-text mb-0">
                <%= link_to short_url.short_url, short_url_path(short_url.short_url), class: 'btn btn-link', target: '_blank' %>
            </p>
            <%= button_to 'Delete', short_url_path(short_url), method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this URL?' } %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
